<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow effect for elevation -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Shadow (25% black) -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main input field with translucent red background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30FF0000"/> <!-- 15% Opacity Red -->
            <stroke android:width="1dp" android:color="@android:color/holo_red_light"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
