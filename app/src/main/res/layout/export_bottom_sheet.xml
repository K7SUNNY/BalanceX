<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/export_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Export Options"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="12dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="16dp"/>

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn_last_10_days"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Last 10 Days"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_corner_container_fliter_section"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_last_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Last Month"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_corner_container_fliter_section"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_last_6_months"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Last 6 Months"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_corner_container_fliter_section"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_last_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Last Year"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_corner_container_fliter_section"
            android:padding="10dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_financial_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Financial Year (Apr-Mar)"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_corner_container_fliter_section"
            android:padding="10dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
