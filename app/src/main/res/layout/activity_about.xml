<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <!-- Back Button -->
            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_svgrepo_com"
                android:contentDescription="Back"
                android:padding="10dp"/>

            <!-- About Section -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="About BalanceX"
                android:textSize="24sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logo_playstore"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BalanceX is a simple yet powerful accounting app designed to help users manage their finances with ease. It offers transaction tracking, financial insights, and an intuitive UI to keep your accounts in check."
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/versionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:gravity="center" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <!-- Terms & Conditions Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. BalanceX is provided as-is without any warranty.\n\n"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. All user data is stored locally; the app does not send financial data to external servers.\n\n"
            android:textSize="14sp"
            android:gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. The developers are not responsible for any financial losses resulting from app usage.\n\n"
            android:textSize="14sp"
            android:gravity="start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. By using BalanceX, you agree to these terms."
            android:textSize="14sp"
            android:gravity="start" />

    </LinearLayout>
</ScrollView>
